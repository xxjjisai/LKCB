/* *index.wxss* */

page {
    background: #f6f6f6;
    display: flex;
  }
  
  .userinfo {
    height: 180rpx;
    width: 100%;
    background: #e64340;
    align-items: center;
    transition: all 300ms ease;
  }
  
  .userinfo-avatar {
    width: 120rpx;
    height: 120rpx;
    margin: auto;
    border-radius: 50%;
    background-size: cover;
    background-color: white;
  }
  
  .userinfo-avatar:after {
    border: none;
  }
  
  .userinfo-nickname {
    margin: auto;
    color:white;
  }
  
  .userinfo-nickname::after {
    border: none;
  }